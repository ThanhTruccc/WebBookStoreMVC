@model template.Models.SACH

@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SÁCH</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
           @Html.Raw( @Html.DisplayFor(model => model.MoTa))
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/Images/Images/Sach/" + Model.HinhMinhHoa)" width="120" />

        </dd>

        <dt>
            Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUDE.TenChuDe)
        </dd>

        <dt>
            Nhà xuất bản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHAXUATBAN.TenNXB)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>

            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat) VND
        </dd>





    </dl>
</div>
<p>
    @Html.ActionLink("Điều chỉnh", "Suasach", new { id = Model.MaSach }) |
    @Html.ActionLink("TRỞ VỀ", "SACH")
</p>