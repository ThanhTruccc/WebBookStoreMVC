@model template.Models.Login
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutBookStore.cshtml";
}


    <h4 style="text-align:center"> @ViewBag.ThongBao</h4>
    <table align="center">
        <h3 style="text-align:center"> ĐĂNG NHẬP </h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td> Tên đăng nhập: </td>
                <td>@Html.TextBox("TenDN") @ViewData["Loi1"]</td>
            </tr>
            <tr style="height:40px">
                <td> Mật khẩu : </td>
                <td>@Html.Password("Matkhau") @ViewData["Loi2"]</td>


            </tr>

            <tr style="height:40px">
                <td>  </td>

                <td>
                    <input type="submit" name="Đăng nhập" />
                </td>
            </tr>
        }
    </table>





