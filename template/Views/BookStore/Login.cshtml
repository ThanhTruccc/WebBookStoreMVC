@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutBookStore.cshtml";
}

<h4 style="text-align:center"> @ViewBag.ThongBao</h4>

<h3 style="text-align:center">Dang Nhap</h3>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table align="center">
        <tr style="height:40px">
            <td>Ten Dang Nhap:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mat Khau:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Dang Nhap" />
            </td>
        </tr>
    </table>
}
